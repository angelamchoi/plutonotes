  <div class ="create-notes">
    <h2> View Mode</h2>
      <!-- Switch -->
      <div class="switch">
        <label> 
          light mode
        <input type="checkbox">
        <span class="lever"></span>
          dark mode
        </label>
      </div>
<br></br>
     <!-- Form -->
  <form action ="/users/mynotes/<%=note._id %>?_method=GET" class= "view-form" method="POST">
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%=note.title %></span>
              <p><%= note.description %> </p>
              <p><%=note.date %></p>
              <p><%=note.content %></p>
          </div>
        </div>
       </div>
      </div>
     </form>   
  <!-- Form for share publicly -->
  <form action ="/plublicnotes/<%=note._id %>?_method=GET" class= "post-form" method="POST">
    <div class="form-group">
      <div class="card-action">
